<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="pane_login" stylesheets="styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.restaurace.MainController">
    <bottom>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" styleClass="loginBtns" text="Registrace" />
                <Button mnemonicParsing="false" styleClass="loginBtns" text="Přihlásit" />
            </children></HBox>
    </bottom>
    <center>
        <VBox prefHeight="70.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <HBox>
            <ImageView styleClass="loginIcons" style="-fx-image: url(img/profile.png);" pickOnBounds="true" preserveRatio="true" />
                <TextField styleClass="txtFields" fx:id="textUserName" />
            </HBox>
            <HBox>
            <ImageView styleClass="loginIcons" style="-fx-image: url(img/key.png);" pickOnBounds="true" preserveRatio="true" />
                <PasswordField styleClass="txtFields" fx:id="textPassword" />
            </HBox>
        </VBox>
    </center>
    <top>
        <Label text="Přihlášení" BorderPane.alignment="CENTER" />
    </top>
</BorderPane>

